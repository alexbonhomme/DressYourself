<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true">
         <shape android:shape="rectangle"  >
             <stroke android:padding="8dip" android:width="1dip" />
             <gradient android:angle="-90"  android:startColor="#57b8b1" android:endColor="#3F9396"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <stroke android:padding="8dip" android:width="1dip" android:color="#ff508c" />
             <solid android:color="#d3d8c2"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle">
             <stroke android:padding="8dip" android:width="1dip" />
             <gradient android:angle="-90"  android:startColor="#57b8b1" android:endColor="#3F9396" />            
         </shape>
     </item>
</selector>