<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityMain" >

    <ImageView
        android:id="@+id/imgLogoMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_2_2_long_1"
        android:contentDescription="@string/title_activity_main"
        android:clickable="true" />

    <Button
        android:id="@+id/btoutfit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/label_generate_main"
        android:textAppearance="@style/btnStyle"
        android:background="@drawable/button_dressyourself_style" />

    <GridView
	    android:id="@+id/gridview"
	    android:layout_width="fill_parent" 
	    android:layout_height="60dp"
	    android:columnWidth="90dp"
	    android:numColumns="2"
	    android:verticalSpacing="0dp"
	    android:horizontalSpacing="0dp"
	    android:layout_margin="0dp"
	    android:stretchMode="columnWidth"
	    android:gravity="center"
	    android:padding="10dp"
	    android:background="#3F9396"
	/>
    
</LinearLayout>
