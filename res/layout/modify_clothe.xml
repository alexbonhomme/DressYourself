<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ModifyClothe" >

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/alert_dark_frame" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_below="@+id/imageButton"
        android:layout_marginTop="30dp"
        android:text="@string/label" />
    
    <TextView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_below="@+id/label"
        android:layout_marginTop="30dp"
        android:text="@string/color_string" />
    
    <TextView
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_below="@+id/color"
        android:layout_marginTop="30dp"
        android:text="@string/weather_string" />
    
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_below="@+id/weather"
        android:layout_marginTop="30dp"
        android:text="@string/description" />

    <EditText
        android:id="@+id/labelEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/label"
        android:layout_toRightOf="@+id/description"
        android:ems="15"
        android:layout_below="@+id/imageButton" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/colorSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelEdit"
        android:layout_alignBottom="@+id/weather" />
    
    <Spinner
        android:id="@+id/weatherSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelEdit"
        android:layout_alignBottom="@+id/color" />

    <EditText
        android:id="@+id/descritpionEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_below="@+id/description"
        android:layout_marginTop="15dp"
        android:ems="20"
        android:inputType="textMultiLine" />

</RelativeLayout>