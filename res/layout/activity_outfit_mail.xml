<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OutfitMail" >

    <TextView
        android:id="@+id/txtDst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="@string/Destinataire"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editDestinataire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDst"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtDst"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txtSaisie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editDestinataire"
        android:layout_marginTop="22dp"
        android:text="@string/Saisie"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEnvoieMail"
        android:layout_alignLeft="@+id/txtSaisie"
        android:layout_alignRight="@+id/editDestinataire"
        android:layout_below="@+id/txtSaisie"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnEnvoieMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editDestinataire"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="20dp"
        android:text="@string/Envoyer" />

</RelativeLayout>
