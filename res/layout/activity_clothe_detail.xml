<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clothe_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityClotheDetail"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/photo"
        android:src="@drawable/bottines" />

    <TextView
        android:id="@+id/modelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/photo"
        android:text="@string/model_string"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/brandLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/brand_string"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/weatherLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/brandLabel"
        android:text="@string/weather_string"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/weatherLabel"
        android:text="@string/color_string"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/modelTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/modelLabel"
        android:layout_alignBottom="@+id/modelLabel"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/weatherLabel"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/brandTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weatherLabel"
        android:layout_alignLeft="@+id/modelTxt"
        android:layout_alignParentRight="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/colorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/brandTxt"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/weatherTxt"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/bodyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BodyLabel"
        android:layout_alignBottom="@+id/BodyLabel"
        android:layout_alignRight="@+id/colorTxt"
        android:layout_toRightOf="@+id/weatherLabel"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/weatherTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ColorLabel"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/weatherLabel"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/modifyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="29dp"
        android:layout_marginRight="24dp"
        android:text="@string/modify" 
		android:textColor="#ffffff"
		android:textAppearance="@style/btnStyleGenoa"
		android:background="@drawable/button_dressyourself_style" />

    <TextView
        android:id="@+id/BodyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ColorLabel"
        android:layout_marginTop="22dp"
        android:text="@string/Body"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/typelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bodyTxt"
        android:layout_alignParentLeft="true"
        android:text="@string/type_string"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/typeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/typelbl"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/weatherLabel"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>

