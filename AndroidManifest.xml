<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="main.java.fr.redteam.dressyourself"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_2_2_1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="main.java.fr.redteam.dressyourself.activites.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="main.java.fr.redteam.dressyourself.activites.OutfitActivity"
            android:label="@string/generate" />
        <activity
            android:name="main.java.fr.redteam.dressyourself.activites.AddClothesActivity"
            android:label="@string/title_add_clothing" />
        <activity
            android:name="main.java.fr.redteam.dressyourself.activites.ClotheListActivity"
            android:label="@string/title_clothe_list" >
        </activity>
        <activity
            android:name="main.java.fr.redteam.dressyourself.activites.ClotheDetailActivity"
            android:label="@string/title_clothe_detail"
            android:parentActivityName="main.java.fr.redteam.dressyourself.activites.ClotheListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ClotheListActivity" />
        </activity>
    </application>

</manifest>
